=======================================================
/*
	   C程式語言
*/
#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	int number;
    printf("輸入:");
    scanf("%d",&number);
    printf("商數:%d,餘數:%d\n",number/5,number%5);
    
	system("pause");
	return 0;
}
=======================================================
---------------------我是分割線-------------------------
=======================================================
/*
	  C++程式語言
*/
#include <iostream>
using namespace std;

int main(void)
{
	int number;
	cout << "輸入:";
    cin >> number;
    cout << "商數:" << number/5 << ",餘數:" << number%5 << endl;

	system("pause");
	return 0;
}
=======================================================
---------------------我是分割線-------------------------
=======================================================
/*
	    java程式語言
*/
import java.util.Scanner;

public class test{
	public static void main(String[] args){
		Scanner sr = new Scanner(System.in);
		System.out.print("輸入:");
		int number = sr.nextInt();
		System.out.println("商數:"+number/5+",餘數:"+number%5);
	}
}
